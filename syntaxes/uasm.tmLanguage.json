{
  "name": "Urmoter's Assembly",
  "scopeName": "source.uasm",
  "patterns": [
    { "include": "#comments" },
    { "include": "#directives" },
    { "include": "#lbl" },
    { "include": "#opcodes" },
    { "include": "#registers" },
    { "include": "#addresses" },
    { "include": "#immediates" },
    { "include": "#strings" },
    { "include": "#label-refs" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.urmoterasm",
          "match": "//.*$"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.directive.urmoterasm",
          "match": "\\.(setloc|start|string)"
        }
      ]
    },
    "lbl": {
      "patterns": [
        {
          "name": "keyword.control.urmoterasm",
          "match": "\\bLBL\\b"
        },
        {
          "name": "entity.name.function.urmoterasm",
          "match": "(?<=\\bLBL\\s)[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "opcodes": {
      "patterns": [
        {
          "name": "keyword.control.urmoterasm",
          "match": "\\b(NOP|MOVA|MOVB|MOVC|MOVD|CPY|STR|LDR|ADD|SUB|INC|DEC|ADC|SBB|NEG|FLP|PSHI|PSHR|POP|JMP|CALL|RET|JZ|JNZ|HLT|JU|JNU|SETU|CLRU|SETZ|CLRZ|SETN|CLRN|SETP|CLRP|SETC|CLRC|AND|OR|XOR|NOT|JE|JNE|JG|JL|PRNI|PRNR|ENPR|JC|JNC|JN|JNN|JP|JNP|IBPR|LDRO)\\b"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.language.register.urmoterasm",
          "match": "(?<=\\s|^)%(A|B|C|D|RH|RL)\\b"
        }
      ]
    },
    "addresses": {
      "patterns": [
        {
          "name": "constant.numeric.address.urmoterasm",
          "match": "@[0-9A-F]{4}\\b"
        }
      ]
    },
    "immediates": {
      "patterns": [
        {
          "name": "constant.numeric.hex.urmoterasm",
          "match": "\\$[0-9A-F]{2}\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.urmoterasm",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.urmoterasm"
            }
          ]
        }
      ]
    },
    "label-refs": {
      "patterns": [
        {
          "name": "entity.name.function.urmoterasm",
          "match": "\\b(?!NOP|MOVA|MOVB|MOVC|MOVD|CPY|STR|LDR|ADD|SUB|INC|DEC|ADC|SBB|NEG|FLP|PSHI|PSHR|POP|JMP|CALL|RET|JZ|JNZ|HLT|JU|JNU|SETU|CLRU|SETZ|CLRZ|SETN|CLRN|SETP|CLRP|SETC|CLRC|AND|OR|XOR|NOT|JE|JNE|JG|JL|PRNI|PRNR|ENPR|JC|JNC|JN|JNN|JP|JNP|IBPR|LDRO|LBL|setloc|start|string)[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
